<table class="table table-hover table-condensed">
	<thead>
		  <tr>
		    <th width="100">Name</th>
		    <th width="100">Actions</th>
		  </tr>
	</thead>
	<tbody>
		<% @account.sub_accounts.each do |sub_account| %>
		  <tr>
		    <td><%= sub_account.name %></td>
		    <td><%= link_to 'Show', sub_account %>
				<%= link_to 'Edit', edit_sub_account_path(sub_account) %>
				<%= link_to 'Destroy', sub_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		  </tr>
		<% end %>
	</tbody>
</table>
<h2 align="center">
  <%= @account.name %> | 	
	<% if @account.current == true %>
		Current <%= @account.bs_category.name %>
	<% else %>
		Non-Current <%= @account.bs_category.name %>
	<% end %>
</h2>
<br>
<div>
	<div class="row-fluid" align="center">
		<div class="span2 offset4">
			<h3>Sub Accounts</h3>
		</div>
		<div class="span2" style="margin-top:10px;">
			<button type="button" id="new_sub_account" class="btn btn-primary">New Sub-Account</button>
		</div>
	</div>
	<div class="row-fluid" align="center">
		<div class="span4 offset4">
			<%= render :template => '/sub_accounts/index'%>
		</div>
	</div>
	
	<div class="row-fluid" align="center">
		<div class="span4 offset4 sub_account_form">
			<%= render :partial => '/sub_accounts/form' %>
		</div>
	</div>
</div>


<div>
	<h3>Transactions</h3>
	<hr>
	<% @account.transactions.order("date DESC").each do |transaction| %>
		<%= render :template => 'transactions/transaction_display', :locals => {transaction: transaction} %>
	<% end %>
	<br />
</div>


<br></br>
<%= link_to 'Edit', edit_account_path(@account) %> |
<%= link_to 'Back', accounts_path %> | 
<%= link_to 'Destroy', @account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
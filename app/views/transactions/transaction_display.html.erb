<div class="row-fluid">
	<div class="span5">
		<strong><p> <%= link_to [transaction.date, truncate(transaction.memo, :length => 50)].join(" | "), edit_transaction_path(transaction)%> </p></strong>
	</div>
	<div class="offset4 span1">
		<strong><p>Debit</p></strong>
	</div>
	<div class="span1">
		<strong><p>Credit</p></strong>
	</div>

	<% transaction.transaction_items.where(:debit => true).each do |transaction_item| %>
		<div class="row-fluid">
			<div class="span3">
				<p><%= transaction_item.sub_account.account.name %> | <%= transaction_item.sub_account.name %> </p>
			</div>
			<div class="offset6 span1">
				<%= transaction_item.amount %>
			</div>
		</div>
	<% end %>

	<% transaction.transaction_items.where(:debit => false).each do |transaction_item| %>
		<div class="row-fluid">
			<div class="offset1 span3">
				<p><%= transaction_item.sub_account.account.name %> | <%= transaction_item.sub_account.name %> </p>
			</div>
			<div class="offset6 span1">
				<%= transaction_item.amount %>
			</div>
		</div>
	<% end %>
</div>
<hr>
<h1>Listing projections</h1>

<%= form_tag projections_path, :method => 'get' do %>
	<p>
		<%= select_month(@month.to_f) %>
		<%= select_year(@year.to_f.round) %>
		<%= submit_tag "Search", :name => nil %>
	</p>
<% end %>

<table class="table table-hover">
  <tr>
    <th>Account | Sub-Account</th>
    <th>Period</th>
    <th>Amount</th>
    <th></th>
  </tr>

<% @projections.each do |projection| %>
  <tr>
    <td><%= projection.sub_account.account.name %> | <%= projection.sub_account.name %></td>
    <td><%= projection.month %>-<%= projection.year %></td>
    <td><%= projection.amount %></td>
    <td><%= link_to 'Show', projection %>
		<%= link_to 'Edit', edit_projection_path(projection) %>
		<%= link_to 'Destroy', projection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Projection', new_projection_path %>
